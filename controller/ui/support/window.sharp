mod ui.support;

import ui.driver;
import ui.layout.config;
import std.io.task;
import std.io;

class window {
    fragments := new list<fragment>();
    back_stack := new list<fragment>();
    id : _int8[];
    launcher : var;
    current_frag : fragment;
    device : ssd1306;

    window(name : _int8[]) {
        id = name;
        if(device == null)
           device = new ssd1306();
    }

    public static def start_ui() {
        configure_layout();
        start();
    }

    def navigate(screen: var) {
        println("nav");
        if(current_frag != null && screen == current_frag.id) {
            (current_frag as lifecycle).on_destroy();
            (current_frag as lifecycle).on_create();
            return;
        }

        frag : fragment;
        for(i := 0; i < fragments.size(); i++) {
            if(fragments.at(i).id == screen)
               frag = fragments.at(i);
        }

        if(frag != null) {
            println("fragment fount");
            (frag as lifecycle).on_create();
            current_frag = frag;
        }
    }

    def starter_fragment(frag: var) {
        launcher = frag;
    }

    protected def draw_text(tv: text_view) {
        device.draw_word(tv.x, tv.y, tv.text_size, tv.width, tv.transform_width(), tv.text.get_data());
    }

    def show() {
        navigate(launcher);
        start_updater();
    }

    def add_fragment(frag : fragment) {
        frag.configure();
        fragments.add(frag);
    }

    def start_updater() {
       for(;;) {
          device.clear();

          if(current_frag != null) {
             current_frag.invalidate();
             current_frag.draw();
          }
          
          device.update_display();     
          thread.sleep(30); 
       }
    }
}
